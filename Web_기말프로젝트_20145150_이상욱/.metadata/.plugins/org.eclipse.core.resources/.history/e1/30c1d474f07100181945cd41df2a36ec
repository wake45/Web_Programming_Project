<jsp:useBean id="class_" class="classes.Info" scope="page"/>
<jsp:useBean id="dbconnect" class="classes.DBConnection" scope="page"/>
<jsp:setProperty name="class_" property="*"/>
	<table width="100%" border=collapse>
	<tr>
		<td>과목
		<td>요일
		<td>시간
		<td>강의실		
	</tr>
	<%
	String str = class_.getName();
	int temp = 0;
	String inf[][] = new String[100][5];
	dbconnect.tableMember(inf);
		for(int i = 0 ; i < 100 ; i++){
			out.print("<tr>");
			for(int j = 0 ; j < 5 ; j++){
				if(inf[i][j] != null){
					if(inf[i][0].equals(str) && j != 0){
						out.print("<td>" + inf[i][j]);
					}
				}
				else{
					temp = -1;
					break;
				}
				
			}
			if(temp == -1){
				break;
			}
			out.print("</tr>");
		}
	
	%>
		
	</table>
